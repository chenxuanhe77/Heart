<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenxuanhe.heart.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Tool_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FB8C8C"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/centertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="心中"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/tab_of_three"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="#F6F7F7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_lingting1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_mimi"
            android:gravity="center"
            android:padding="5dp"
            android:text="聆听"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_chat1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_chat"
            android:gravity="center"
            android:padding="5dp"
            android:text="聊天"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txt_my1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_my"
            android:gravity="center"
            android:padding="5dp"
            android:text="我"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp"/>

    </LinearLayout>
    <View
        android:id="@+id/line_tab1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F6F7F7"
        android:layout_above="@id/tab_of_three"/>

    <FrameLayout
        android:id="@+id/frag_of_all1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Tool_bar1"
        android:layout_above="@id/line_tab1"
        >

    </FrameLayout>

</RelativeLayout>
