<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FF4081"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/chat"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_cardsex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="男"
                    android:textColor="@android:color/white"
                    />

                <TextView
                    android:id="@+id/txt_cardname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="姓名"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/txt_cardtime"
                android:gravity="right|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="今天22.22"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >


            <TextView
                android:text="dsdddddddddddddddd"
                android:id="@+id/txt_cardmessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_goodjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goodjob"/>

            <TextView
                android:id="@+id/goodjob_number"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/card_attention"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/tab_menu_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>





    </LinearLayout>


</android.support.v7.widget.CardView>